  animation: slowPan 12s infinite alternate;
}

@keyframes slowPan{
  from{transform:scale(1) translateX(0);}
  to{transform:scale(1.03) translateX(10px);}
}

/* Frames scene */
.frames{
    display:flex;
    gap:40px;
    margin-top:20px;
}
.frame{
    border:3px solid hotpink;
    padding:15px;
